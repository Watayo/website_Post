
<% unless session[:user] %>
<%# ログイン前の画面 %>
	<a href="/signin">ログイン</a>　
	<a href="/signup">新規登録</a>
	<h2>未ログイン</h2>
<% else %>
<%# ログインしたあと %>
	<a href="/signout">ログアウト</a>
	<h2><%= current_user.name %>としてログイン</h2>
	<%# 投稿フォームに飛ぶ %>
	<a href="/itemupload">投稿</a>
<% end %>
<div> <%# 投稿したやつを一覧表示 %>
		<% @items.each do |item| %>
			<tr>
				<a href="/items/<%= item.id %>"><%= item.title %></a>
			</tr>
		<% end %>
	</div>
